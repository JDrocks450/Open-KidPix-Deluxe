<Button x:Class="KidPix.App.UI.Controls.KPButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KidPix.App.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" BorderThickness="0" BorderBrush="{x:Null}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}"/>
        </ControlTemplate>
    </Button.Template>
</Button>
