<ToggleButton x:Class="KidPix.App.UI.Controls.KPButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KidPix.App.UI.Controls"
             mc:Ignorable="d" Name="HOST"
             d:DesignHeight="50" d:DesignWidth="100" BorderThickness="0" BorderBrush="{x:Null}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Checked="HOST_Checked" Unchecked="HOST_Checked">
    <ToggleButton.Template>
        <ControlTemplate TargetType="ToggleButton">
            <Border BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                <ContentControl Foreground="{TemplateBinding Foreground}">
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ContentControl>
            </Border>
        </ControlTemplate>
    </ToggleButton.Template>
</ToggleButton>
