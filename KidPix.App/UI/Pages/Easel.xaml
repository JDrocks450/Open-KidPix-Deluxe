<Page x:Class="KidPix.App.UI.Pages.Easel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KidPix.App.UI.Pages" xmlns:controls="clr-namespace:KidPix.App.UI.Controls"
      mc:Ignorable="d" 
      Height="600" Width="800"
      Title="Easel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="Green" Opacity="0"/>
            </Grid.Background>
            <Viewbox Margin="5, 65, 10, 10" VerticalAlignment="Top">
                <Grid Width="90" Height="270">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="controls:KPButton">
                                <Setter Property="Margin" Value="0,0,0,4"/>
                            </Style>
                        </StackPanel.Resources>
                        <controls:KPButton x:Name="DrawButton" Width="50" Height="50" Margin="10,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="25" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                        <controls:KPButton x:Name="PaintButton" Width="50" Height="50"  Margin="9,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="30" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush> 
                        </controls:KPButton>
                        <controls:KPButton x:Name="StickersButton" Width="50" Height="50" Margin="5,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush  AssetType="tBMH" AssetID="1000" BMHFrame="5" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush> 
                        </controls:KPButton>
                        <controls:KPButton x:Name="MixersButton" Width="50" Height="50"  Margin="5,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="42" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush> 
                        </controls:KPButton>
                        <controls:KPButton x:Name="AudioButton" Width="50" Height="50" Margin="5,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush  AssetType="tBMH" AssetID="1000" BMHFrame="19" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                        <controls:KPButton x:Name="SelectionButton" Width="50" Height="50"  Margin="4,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="58" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <StackPanel.Resources>
                            <Style TargetType="controls:KPButton">
                                <Setter Property="Margin" Value="0,0,0,4"/>
                            </Style>
                        </StackPanel.Resources>
                        <controls:KPButton x:Name="ABCButton" Width="50" Height="50"  Margin="-3,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="53" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                        <controls:KPButton x:Name="FillButton" Width="50" Height="50"  Margin="-4,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="36" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                        <controls:KPButton x:Name="StampsButton" Width="50" Height="50"  Margin="1,0,0,4">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="48" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                        <controls:KPButton x:Name="BackgroundsButton" Width="50" Height="50"  Margin="-5,5,0,5">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="0" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                        <controls:KPButton x:Name="AnimationsButton" Width="50" Height="50"  Margin="-3,5,0,5">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="10" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                        <controls:KPButton x:Name="EraserButton" Width="50" Height="50"  Margin="-3,10,0,5">
                            <controls:KPButton.KPImageBrush>
                                <controls:KPImageBrush AssetType="tBMH" AssetID="1000" BMHFrame="64" BMHAnimationFrames="4"/>
                            </controls:KPButton.KPImageBrush>
                        </controls:KPButton>
                    </StackPanel>
                </Grid>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
