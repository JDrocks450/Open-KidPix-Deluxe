<Window x:Class="KidPix.ResourceExplorer.Model.Core.ProcessingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KidPix.ResourceExplorer.Model.Core"
        mc:Ignorable="d"
        Title="ProcessingWindow" Height="50" Width="300" WindowStyle="None" FontFamily="Comic Sans MS" Foreground="White" Background="{StaticResource KidPixBannerBackgroundBrush}">
    <Border BorderThickness="1" BorderBrush="#FF5E24FF">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#7F000000" Offset="1"/>
                <GradientStop Color="#00000000" Offset="0"/>
            </LinearGradientBrush>
        </Border.Background>
        <DockPanel>
            <ProgressBar DockPanel.Dock="Bottom" Value=".5" Maximum="1"/>
            <Grid Margin="5,2">
                <TextBlock FontStyle="Italic">Please wait...</TextBlock>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">DESCRIPTION</TextBlock>
            </Grid>
        </DockPanel>
    </Border>
</Window>
